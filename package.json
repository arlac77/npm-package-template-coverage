{
  "scripts": {
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "devDependencies": {
    "c8": "^7.3.0"
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-ava"
    ],
    "usedBy": [
      "arlac77/fetch-rate-limit-util",
      "arlac77/template-esm-only",
      "arlac77/template-kronos-component",
      "arlac77/template-node-app"
    ],
    "mergers": [
      {
        "type": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "Coverage Status",
              "icon": "https://coveralls.io/repos/{{github.user}}/{{github.repo}}/badge.svg",
              "url": "https://coveralls.io/r/{{github.user}}/{{github.repo}}",
              "order": 0.41
            }
          ]
        }
      }
    ]
  }
}